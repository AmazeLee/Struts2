<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<constant name="struts.devMode" value="true" />
	<!-- 运行ongl表达式 访问静态方法 -->
	<constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>

	<package name="showvs" namespace="/" extends="struts-default">

		<action name="DemoAction" class="com.sh.b_showvs.DemoAction"
			method="execute">
			<result name="success" type="dispatcher">/showvs.jsp</result>
		</action>
		<action name="Demo2Action" class="com.sh.c_param.Demo2Action"
			method="execute">
			<result name="success" type="dispatcher">/form.jsp</result>
		</action>
		<action name="Demo3Action" class="com.sh.d_config.Demo3Action"
			method="execute">
			<result name="success" type="redirectAction">
				<param name="actionName">DemoAction</param>
				<param name="namespace">/</param>
				<!-- 如果添加的参数struts"看不懂"，就会作为参数附加重定向的路径之后 如果参数是动态的，可以使用${}包裹ognl表达式，动态取值 -->
				<param name="name">${name}</param>
			</result>
		</action>
	</package>
	<include file="com/sh/param/struts.xml"></include>
</struts>